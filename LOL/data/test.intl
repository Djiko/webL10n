/* vim: ft=javascript:ts=4:sw=4
 *   entity : value
 *   macro : { expression }
 *
 * Notes:
 *   - this file is *NOT* JSON-compliant, it just uses a JSON-like syntax
 *   - the whole data is not enclosed in a main { ... } block;
 *   - the comma separator should be optional at EOL, required otherwise
 *   - this formats supports all LOL features
 */

/* strings */
newFile: "New File",
close:   "Close",

/* parameters */
luckyNum: "Your lucky number is: {{num}}",
signedIn: "You're signed in as {{login}}",

/* attributes */
nameInput: {
    .placeholder: "Write your name",
    .title:       "You can give us your nickname if you prefer"
},

/* content + attributes */
buttonClick: {
    ~:          "Click me",
    .info:      "{{.title}}",
    .title:     "use Ctrl+{{.accesskey}}",
    .accesskey: "c"
},

/* arrays */
drinks[num]: [
    "Coca Cola",
    "Gatorade",
    "Water"
],

/* lists */
cookie[form]: {
    one:  "Cookie",
    many: "Cookies"
},

/* nested lists */
moreDrinks[type, num]: {
    cup: { one: "Cup", many: "Cups" },
    pot: { one: "Pot", many: "Pots" }
},

/* macros */
plural(n): { n == 1 ? 'one' : 'many' },
download[plural(count)]: {
    one: "one download",
    many: "{{count}} downloads"
}

